<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="taskcli.gui.Controller">

  <!-- TOP toolbar card -->
  <top>
    <HBox fx:id="toolbar" spacing="8">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
      </padding>

      <TextField fx:id="inputField"
                 promptText="Task titleâ€¦"
                 HBox.hgrow="ALWAYS"/>
      <DatePicker fx:id="duePicker" promptText="Due date"/>
      <TextField fx:id="tagsField" promptText="tags (comma-separated)"/>

      <Button text="+" onAction="#onAdd">
        <tooltip>
          <Tooltip text="Add new task"/>
        </tooltip>
      </Button>
      <Button text="âœ”" onAction="#onMarkDone">
        <tooltip>
          <Tooltip text="Mark selected task as done"/>
        </tooltip>
      </Button>
      <Button text="ðŸ—‘" onAction="#onDelete">
        <tooltip>
          <Tooltip text="Delete selected task"/>
        </tooltip>
      </Button>
    </HBox>
  </top>

  <!-- CENTER table view -->
  <center>
    <TableView fx:id="taskTable">
      <columns>
        <TableColumn fx:id="colId"     text="ID"     prefWidth="40"/>
        <TableColumn fx:id="colTitle"  text="Title"  prefWidth="200"/>
        <TableColumn fx:id="colDue"    text="Due"    prefWidth="120"/>
        <TableColumn fx:id="colTags"   text="Tags"   prefWidth="150"/>
        <TableColumn fx:id="colStatus" text="Status" prefWidth="80"/>
      </columns>
      <BorderPane.margin>
        <Insets top="0" right="10" bottom="10" left="10"/>
      </BorderPane.margin>
    </TableView>
  </center>

</BorderPane>
